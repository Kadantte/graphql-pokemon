{
  "functions": {
    "predeploy": "yarn firebase:preparehost && yarn build ",
    "source": "./"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "scripts",
      "**/*.yml",
      "**/*.json",
      "**/*.iml",
      "**/*.tsbuildinfo",
      "**/*.lock"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/foo{,/**}",
        "function": "api"
      }
    ]
  }
}
