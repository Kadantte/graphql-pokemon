{
  "name": "website-api",
  "version": "1.0.0",
  "description": "API for favware.tech",
  "author": "@favware",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://favware.tech/",
  "private": true,
  "scripts": {
    "lint": "eslint src --ext ts --fix",
    "test": "jest",
    "build": "tsc",
    "watch": "tsc -w",
    "serve": "yarn build && firebase serve --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "docs": "typedoc",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "commit": "git-cz",
    "cz": "git-cz",
    "prepublishOnly": "yarn build",
    "scripts:runner": "ts-node -P tsconfig.eslint.json",
    "scripts:validateNoOnly": "yarn scripts:runner scripts/validateNoOnly",
    "scripts:yarnAfterPull": "yarn scripts:runner scripts/yarnAfterPull"
  },
  "dependencies": {
    "@discordjs/collection": "^0.1.3",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^3.1.0",
    "fuse.js": "^3.4.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@favware/eslint-config": "^3.1.3",
    "@favware/ts-config": "^1.0.1",
    "@firebase/app-types": "^0.4.6",
    "@firebase/util": "^0.2.31",
    "@types/express": "^4.17.1",
    "@types/glob": "^7.1.1",
    "@types/node": "^12.11.1",
    "chalk": "^2.4.2",
    "eslint": "^6.6.0",
    "execa": "^3.2.0",
    "glob": "^7.1.5",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "files": [
    "functions/lib"
  ],
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/website-api.git"
  },
  "bugs": {
    "url": "https://github.com/favware/website-api/issues"
  },
  "keywords": [
    "favware",
    "typescript",
    "ts",
    "yarn",
    "graphql"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged",
      "post-merge": "yarn scripts:yarnAfterPull"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
