{
  "$schema": "http://json.schemastore.org/prettierrc",
  "endOfLine": "lf",
  "parser": "typescript",
  "printWidth": 200,
  "quoteProps": "preserve",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": "(flavorText|formats).json",
      "options": {
        "parser": "json-stringify"
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
